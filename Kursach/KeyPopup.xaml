<Window x:Class="Kursach.KeyPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kursach"
        mc:Ignorable="d"
        Title="Введите ключ" Height="91" Width="324" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid Margin="0,0,0,-1" Background="#FFE2E2E2">
        <TextBox x:Name="KeyField" HorizontalAlignment="Left" Height="23" Margin="20,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="InputButton" Content="Ввод" HorizontalAlignment="Left" Margin="240,20,0,0" VerticalAlignment="Top" Width="60" Click="OnInputButtonClicked"/>

    </Grid>
</Window>
